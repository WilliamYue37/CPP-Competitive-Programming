<snippet>
	<content><![CDATA[
int N, source, sink;
int adjMat[MAXN];
bool seen[MAXN];

int dfs(int u, int amount) {
	if (u == sink) return amount;
	seen[u] = true;
	for (int v = 1; v <= N; ++v) {
		if (adjMat[u][v] > 0 && !seen[v]) {
			int sent = dfs(v, min(amount, adjMat[u][v]));
			if (sent > 0) {
				adjMat[u][v] -= sent;
				adjMat[v][u] += sent;
				return sent;
			}
		}
	}

	return 0;
}

int run() {
	int total = 0;
	int sent = -1;

	while (sent != 0) {
		fill(seen, seen + N, false);
		sent = dfs(source, (1 << 29));
		total += sent;
	}

	return total;
}
]]></content>
